{
  "name": "opus-irae.com",
  "version": "0.2.0",
  "engines": {
    "node": ">=16.15.0"
  },
  "license": "MIT",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --cache --write --plugin-search-dir=. \"**/*.{cjs, js, ts, svelte}\"",
    "lint": "eslint . --fix --ext .cjs,.js,.ts,.svelte",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "test:browser": "playwright test",
    "coverage": "vitest run --coverage",
    "check:all": "pnpm format && pnpm lint"
  },
  "devDependencies": {
    "@playwright-testing-library/test": "^4.5.0",
    "@playwright/test": "^1.47.0",
    "@sveltejs/adapter-node": "^5.2.1",
    "@sveltejs/kit": "^2.5.27",
    "@sveltejs/vite-plugin-svelte": "^3.1.2",
    "@tailwindcss/typography": "^0.5.14",
    "@typescript-eslint/eslint-plugin": "~7.7.0",
    "@typescript-eslint/parser": "~7.18.0",
    "autoprefixer": "^10.4.20",
    "@vitest/ui": "^1.2.2",
    "c8": "^10.1.2",
    "eslint": "~8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.44.0",
    "jsdom": "^25.0.0",
    "playwright-testing-library": "^4.5.0",
    "postcss": "^8.4.47",
    "postcss-load-config": "^5.0.2",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.1.2",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "svelte": "^4.2.19",
    "svelte-check": "^4.0.2",
    "svelte-meta-tags": "^3.1.4",
    "svelte-preprocess": "^6.0.2",
    "tailwindcss": "^3.4.1",
    "tslib": "^2.7.0",
    "typescript": "~5.5.4",
    "vite": "^5.4.6",
    "vitest": "^1.2.2",
    "vitest-dom": "^0.1.1"
  },
  "type": "module"
}
