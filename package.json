    "postcss": "^8.4.32",
    "postcss-load-config": "^4.0.2",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "svelte": "^4.2.8",
    "svelte-check": "^3.6.2",
    "svelte-preprocess": "^5.1.2",
    "tailwindcss": "^3.3.6",
    "tslib": "^2.6.2",
    "typescript": "~5.2.2",
    "vite": "^5.0.10",
    "vitest": "^1.0.4",
    "vitest-dom": "^0.1.1"
