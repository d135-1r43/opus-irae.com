{
  "name": "opus-irae.com",
  "version": "0.2.0",
  "engines": {
    "node": ">=16.15.0"
  },
  "license": "MIT",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --cache --write --plugin-search-dir=. \"**/*.{cjs, js, ts, svelte}\"",
    "lint": "eslint . --fix --ext .cjs,.js,.ts,.svelte",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "test:browser": "playwright test",
    "coverage": "vitest run --coverage",
    "check:all": "pnpm format && pnpm lint"
  },
  "devDependencies": {
    "@playwright-testing-library/test": "^4.5.0",
    "@playwright/test": "^1.40.1",
    "@sveltejs/adapter-node": "^2.0.0",
    "@sveltejs/kit": "^2.0.6",
    "@sveltejs/vite-plugin-svelte": "^3.0.1",
    "@tailwindcss/typography": "^0.5.10",
    "@typescript-eslint/eslint-plugin": "~6.16.0",
    "@typescript-eslint/parser": "~6.16.0",
    "@vitest/ui": "^1.0.4",
    "autoprefixer": "^10.4.16",
    "c8": "^8.0.1",
    "eslint": "~8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.35.1",
    "jsdom": "^23.0.1",
    "playwright-testing-library": "^4.5.0",
    "postcss": "^8.4.32",
    "postcss-load-config": "^5.0.2",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "svelte": "^4.2.8",
    "svelte-check": "^3.6.2",
    "svelte-meta-tags": "^3.1.0",
    "svelte-preprocess": "^5.1.2",
    "tailwindcss": "^3.4.0",
    "tslib": "^2.6.2",
    "typescript": "~5.3.3",
    "vite": "^5.0.10",
    "vitest": "^1.1.0",
    "vitest-dom": "^0.1.1"
  },
  "type": "module"
}
