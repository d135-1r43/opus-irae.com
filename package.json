{
  "name": "opus-irae.com",
  "version": "0.2.0",
  "engines": {
    "node": ">=16.15.0"
  },
  "license": "MIT",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --cache --write --plugin-search-dir=. \"**/*.{cjs, js, ts, svelte}\"",
    "lint": "eslint . --fix --ext .cjs,.js,.ts,.svelte",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "test:browser": "playwright test",
    "coverage": "vitest run --coverage",
    "check:all": "pnpm format && pnpm lint"
  },
  "devDependencies": {
    "@playwright-testing-library/test": "^4.5.0",
    "@playwright/test": "^1.58.0",
    "@sveltejs/adapter-node": "^5.5.1",
    "@sveltejs/kit": "^2.50.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.4",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/postcss": "^4.1.18",
    "@typescript-eslint/eslint-plugin": "~8.53.0",
    "@typescript-eslint/parser": "~8.53.0",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.23",
    "c8": "^10.1.3",
    "eslint": "~9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.14.0",
    "jsdom": "^27.4.0",
    "playwright-testing-library": "^4.5.0",
    "postcss": "^8.5.6",
    "postcss-load-config": "^6.0.1",
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3.4.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "svelte": "^5.48.0",
    "svelte-check": "^4.3.5",
    "svelte-meta-tags": "^4.5.0",
    "svelte-preprocess": "^6.0.3",
    "tailwindcss": "^4.1.18",
    "tslib": "^2.8.1",
    "typescript": "~5.8.3",
    "vite": "^5.4.21",
    "vitest": "^3.0.8",
    "vitest-dom": "^0.1.1"
  },
  "type": "module"
}
